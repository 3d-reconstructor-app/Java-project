<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:id="@+id/activity_phototab">

    <GridView
        android:id="@+id/fragment_photo_grid_view2"
        android:numColumns="auto_fit"
        android:verticalSpacing="4dp"
        android:gravity="center"
        android:horizontalSpacing="4dp"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/fragment_photo_empty_view2"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/activity_main_empty_view_text"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintL_fragment_photo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/myFAB11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:contentDescription="GALERY"
            android:src="@drawable/icon_plus"
            app:elevation="4dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/myFAB22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:contentDescription="CAMERA"
            android:src="@drawable/icon_plus"
            app:elevation="4dp"
            app:layout_constraintEnd_toStartOf="@+id/myFAB33"
            app:layout_constraintStart_toEndOf="@+id/myFAB11"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/myFAB33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="44dp"
            android:contentDescription="SELECT"
            android:src="@drawable/icon_plus"
            app:elevation="4dp"
            app:layout_constraintEnd_toStartOf="@+id/myFAB44"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/myFAB44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:contentDescription="DELETE"
            android:src="@drawable/icon_plus"
            app:elevation="4dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="323dp"
            tools:layout_editor_absoluteY="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

